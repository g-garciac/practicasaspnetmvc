@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Nuevo producto</h1>
    <h2>Datos generales</h2>
</div>

<div class="Formulario">
        <form>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="inputSKU">SKU</label>
        <input type="text" class="form-control" id="inputSKU" placeholder="SKU del producto">
        </div>
        <div class="form-group col-md-6">
        <label for="inputNombre">Nombre</label>
        <input type="text" class="form-control" id="inputNombre" placeholder="Nombre del producto">
        </div>
    </div>
    <div class="form-group">
        <label for="inputDescripcion">Descripción</label>
        <input type="text" class="form-control" id="inputdescripcion" placeholder="Características que describen al producto">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="inputCosto">Costo</label>
        <input type="number" class="form-control" id="inputCosto" placeholder="Costo">
        </div>
        <div class="form-group col-md-6">
        <label for="inputPrecio">Precio</label>
        <input type="number" class="form-control" id="inputPrecio" placeholder="Precio">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress2">Categoria</label>
        <input type="text" class="form-control" id="inputCategoria" placeholder="Categoria a la que pertenece el producto">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="inputStock">Stock</label>
        <input type="number" class="form-control" id="inputStock" placeholder="Stock mínimo">
        </div>
        <div class="form-group col-md-6">
        <label for="inputFechaUltimaCompra">Fecha de última compra</label>
        <input type="date" class="form-control" id="inputFechaUltimaCompra">
        </div>
    </div>
    <div class="Botones">
        <button type="submit" class="btn btn-primary">Limpiar</button>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
    </form>
</div>