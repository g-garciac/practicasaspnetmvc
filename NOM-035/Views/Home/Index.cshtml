@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>FORMULARIO UNO DE LA NORMA 035 PARA TRABAJADORES O EMPRESAS</h1>
    <h3 class="display-4">CUESTIONARIO PARA IDENTIFICAR A LOS TRABAJADORES QUE FUERON SUJETOS A ACONTECIMIENTOS TRAUMÁTICOS SEVEROS </h3>
</div>

<div class="Formulario">
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="NombreEmpresa">Nombre de la Empresa:</label>
                <input type="text" class="form-control" id="NombreEmpresa" placeholder="Nombre de la empresa:">
            </div>
            <div class="form-group col-md-6">
                <label for="Estado">Estado</label>
                <input type="text" class="form-control" id="Estad" placeholder="Estado">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="DireccionEmpresa">Dirección de la Empresa</label>
                <input type="text" class="form-control" id="direccionE" placeholder="Dirección de la Empresa">
            </div>
            <div class="form-group col-md-6">
                <label for="Telefono">Telefono</label>
                <input type="text" class="form-control" id="telefono" placeholder="Teléfono">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="NombreDelEmpleado">Nombre del Empleado</label>
                <input type="text" class="form-control" id="nombredelempleado" placeholder="Nombre del Empleado">
            </div>
            <div class="form-group col-md-6">
                <label for="Antiguedad">Antiguedad</label>
                <input type="number" class="form-control" id="antiguedad" placeholder="Antigüedad">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="area">Área</label>
                <input type="text" class="form-control" id="area" placeholder="Área">
            </div>
            <div class="form-group col-md-6">
                <label for="puesto">Puesto</label>
                <input type="text" class="form-control" id="Puesto">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="edad">Edad</label>
                <input type="text" class="form-control" id="edad" placeholder="Edad">
            </div>
            <div class="form-group col-md-2">
                <label for="genero">Genero</label>
                <div>
                    <input type="radio" id="f" name="f" value="F"
                           checked>
                    <label for="Femenino">F</label>
                </div>
                <div>
                    <input type="radio" id="m" name="m" value="M"
                           checked>
                    <label for="Masculino">M</label>
                </div>
            </div>
            <div class="form-group col-md-2">
                <label for="EstadoCivil">Estado Civil</label>
                <input type="text" class="form-control" id="Estado Civil">
            </div>
        </div>





        <div class="Botones">
            <button type="submit" class="btn btn-primary">Limpiar</button>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>